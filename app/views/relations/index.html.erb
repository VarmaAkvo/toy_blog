<div class="card">
  <div class="card-header">关注中</div>
  <div class="row card-body">
    <% @following.each do |user| %>
      <div class="col-4 d-flex my-2">
        <div class="mr-2">
          <%= avatar_of(user, 64) %>
        </div>
        <div class="d-flex flex-column justify-content-between py-1">
          <%= link_to user.name, user_articles_path(user.name), class: "" %>
          <%= link_to '取消关注', user_following_path(user), method: :delete, class: 'btn btn-danger btn-sm py-0' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= will_paginate @following, previous_label: '<<', next_label: '>>', class: 'digg_pagination' %>

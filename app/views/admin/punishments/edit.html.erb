<div class="col-6 offset-3">
  <h2 class="bg-dark p-3 mb-0 text-white rounded-top">延长<%= @punishment.user.name %>封禁时间</h2>
  <div class="px-2">
    <%= form_for  [:admin, @punishment] do |f| %>
      <div class="field form-group pt-2">
        <%= f.label :extra_time %>
        <%= f.text_field :extra_time, autocomplete: "extra_time", class: "form-control" %>
        <%= error_list(@punishment, :extra_time) %>
      </div>

      <div class="actions">
        <%= f.submit '延长', class: "btn btn-info btn-block" %>
      </div>
    <% end %>
  </div>
  <%= link_to '返回目录', admin_punishments_path %>
</div>

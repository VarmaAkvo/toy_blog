<tr>
  <td>
    <%= punishment.user.name %>
  </td>
  <td>
    <%= punishment.expire_time.strftime('%Y年%m月%d日 %H:%M') %>
  </td>
  <td>
    <%= link_to '更新', edit_admin_punishment_path(punishment), class: 'btn btn-info btn-sm' %>
    <%= link_to '删除', admin_punishment_path(punishment), method: :delete,
                data: {confirm: '你确定要删除它？'}, class: 'btn btn-danger btn-sm'%>
  </td>
</tr>

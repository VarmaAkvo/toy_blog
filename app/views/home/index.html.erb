<div class="container mb-3">
  <h4 class="rounded-top border-dark row px-4 py-3 mb-0 bg-dark text-white ">人气博客</h4>
  <div class="row ">
    <% @ranking_users.each do |user| %>
      <div class="border col-4 d-flex flex-column justify-content-center align-items-center py-2">
        <%= avatar_of(user, 64) %>
        <h5 class="card-title mb-1"><%= link_to user.name, user_articles_path(user.name), class: 'card-link' %></h5>
        <small><%= user.follower_count %>名关注者</small>
        <div class="card-text small"><%= user.profile %></div>
        <%= user_tag_list(user.tag_strings) %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= link_to '更多', search_ranking_users_path, class: 'btn btn-outline-secondary btn-block'%>
  </div>
</div>
<% if user_signed_in? &&  @recent_following_articles.present? %>
  <div class="container mb-3">
    <h4 class="rounded-top border-dark row px-4 py-3 mb-0 bg-dark text-white">我关注的最新文章</h4>
    <div class="row">
      <% @recent_following_articles.each do |article| %>
        <div class="border col-4 d-flex flex-column justify-content-center align-items-center py-2">
          <%= avatar_of(article.user, 64) %>
          <h5 class="mb-1"><%= link_to article.user.name, user_articles_path(article.user.name), class: 'card-link' %></h5>
          <h5 class="card-title mb-1">
            <%= link_to article.title, user_article_path(article.user.name,article), class: 'card-link' %>
          </h5>
          <div class="card-text small text-secondary"><%= article.created_at.strftime('%Y年%m月%d日 %H:%M') %></div>
          <%= article_tag_list(article.tag_list) %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <%= link_to '更多', search_following_articles_path, class: 'btn btn-outline-secondary btn-block'%>
    </div>
  </div>
<% end %>

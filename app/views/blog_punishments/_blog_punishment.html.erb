<tr>
  <td>
    <%= blog_punishment.punished.name %>
  </td>
  <td>
    <%= blog_punishment.expire_time.strftime('%Y年%m月%d日 %H:%M') %>
  </td>
  <td>
    <%= link_to '更新', edit_blog_punishment_path(blog_punishment), class: 'btn btn-info btn-sm' %>
    <%= link_to '删除', blog_punishment_path(blog_punishment), method: :delete,
                data: {confirm: '你确定要删除它？'}, class: 'btn btn-danger btn-sm'%>
  </td>
</tr>

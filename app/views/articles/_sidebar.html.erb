<div class="col-2">
  <div class="row card mb-2">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
      <%= avatar_of(@owner, 96) %>
      <h5 class="card-title mb-1"><%= @owner.name %></h5>
      <small><%= @owner.following.count %>名关注者</small>
      <div class="mb-2">
        <% if current_user && current_user.following?(@owner) %>
          <%= link_to '取消关注', user_following_path(@owner), method: :delete, class: 'btn btn-danger btn-sm py-0' %>
        <% else %>
          <%= link_to '关注', user_following_path(@owner), method: :post, class: 'btn btn-primary btn-sm py-0' unless current_user == @owner %>
        <% end %>
      </div>
      <div class="card-text small"><%= @owner.profile %></div>
      <%= user_tag_list(@owner.tags) %>
    </div>
  </div>
  <div class="row card">
    <div class="card-header text-white bg-primary">该博客的tag检索</div>
    <div class="card-body">
      <%= tag_list_with_count(@uats) %>
    </div>
  </div>
</div>

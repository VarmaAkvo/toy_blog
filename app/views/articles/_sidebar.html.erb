<div class="col-2">
  <div class="row card">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
      <h5 class="card-title"><%= @owner.name %></h5>
      <div class="">
        <% if current_user && current_user.following?(@owner) %>
          <%= link_to '取消关注', '#', method: :delete, class: 'btn btn-danger btn-sm' %>
        <% else %>
          <%= link_to '关注', '#', method: :post, class: 'btn btn-primary btn-sm' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

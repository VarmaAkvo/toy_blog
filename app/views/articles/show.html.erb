<div class="row">
  <div class="col-6 offset-2">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title border-bottom pb-2"><%= @article.title %></h3>
        <div class="d-flex justify-content-between pb-2">
          <% if is_my_blog? %>
            <div class="">
              <%= link_to '更新', edit_user_article_path(current_user.name, @article), class: 'btn btn-info btn-sm', role: 'button' %>
              <%= link_to '删除该文章', user_article_url(current_user.name, @article), method: :delete, data: {confirm: '你确定要删除它吗'}, class: 'btn btn-danger btn-sm', role: 'button'%>
            </div>
          <% end %>
          <div class="">
            <small class="text-secondary align-bottom"><%= @article.created_at.strftime('%Y年%m月%d日 %H:%M') %></small>
          </div>
        </div>
        <%= @article.content %>
      </div>
    </div>
    <div class="d-flex justify-content-between">
      <div class="m-2">
        <%= link_to('< 前一篇文章', user_article_path(@owner.name, @pre_article), class: 'btn btn-outline-info', role: 'button') if @pre_article %>
      </div>
      <div class="m-2">
        <%= link_to('后一篇文章 >', user_article_path(@owner.name, @next_article), class: 'btn btn-outline-info', role: 'button') if @next_article %>
      </div>
    </div>
  </div>
  <div class="col-2">
    <div class="row card">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h5 class="card-title"><%= @owner.name %></h5>
        <div class="">
          <% if current_user && current_user.following?(@owner) %>
            <%= link_to '取消关注', '#', method: :delete, class: 'btn btn-danger btn-sm' %>
          <% else %>
            <%= link_to '关注', '#', method: :post, class: 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

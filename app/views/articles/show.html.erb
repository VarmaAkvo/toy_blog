<div class="row">
  <div class="col-6 offset-2">
    <%= render @article %>
    <div class="d-flex justify-content-between">
      <div class="m-2">
        <%= link_to('< 前一篇文章', user_article_path(@owner.name, @pre_article), class: 'btn btn-outline-info', role: 'button') if @pre_article %>
      </div>
      <div class="m-2">
        <%= link_to('后一篇文章 >', user_article_path(@owner.name, @next_article), class: 'btn btn-outline-info', role: 'button') if @next_article %>
      </div>
    </div>
  </div>
  <div class="col-2">
    <div class="row card">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h5 class="card-title"><%= @owner.name %></h5>
        <div class="">
          <% if current_user && current_user.following?(@owner) %>
            <%= link_to '取消关注', '#', method: :delete, class: 'btn btn-danger btn-sm' %>
          <% else %>
            <%= link_to '关注', '#', method: :post, class: 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
